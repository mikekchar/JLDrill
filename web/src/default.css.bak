body {
  margin: 0px 2em;
  padding: 0px;
  font-size: 12px;
  font-family: Verdana, Arial, Helvetica, sans-serif;
  color: black;
}

  #all { background-color: #efeacd; }

  #header {
    padding: 1ex;
  }
  #header h1 {
    margin: 0ex;
	font-size: 300%;
	font-style: italic;
	font-weight: normal;
  }

, #headerbar { border-bottom: 1px solid black; }
  #footer { border-top: 1px solid black; }

  #body {
    margin-left: 11em;
    padding: 10px;
	background-color: #efeacd;
  }

  #menu {
	float: left;
	margin: 1em;
	border: 1px solid black;
	width: 10em;
	background-color: #efd8c8;
	text-align: center;
  }

  .bar {
	clear: both;
	padding: 3px;
	text-align: center;
	font-size: 90%;
    background-color: #aecce3;
	border-bottom: 1px solid black;
  }

  .left, .right {
    padding: 0px 1em;
  }

  .left {
	float: left;
	text-align: left;
  }

  .right {
	float: right;
	text-align: right;
  }

  /* styling the menu */

  #menu a {
	text-decoration: none;
	font-weight: bold;
	font-size: 80%;
  }

  #menu a:hover {
	text-decoration: underline;
  }

  #menu .webgen-menuitem-selected {
	border-left: 3px solid black;
  }

  #menu ul {
	list-style-type: none;
	padding: 0px;
	margin-left: 10px;
  }

  #menu li > ul {
	font-size: 95%;
  }

  #menu li {
    margin: 0.0em 0px;
    padding: 2px 0px;
    padding-left: 5px;
    border-left: 1px solid #000000;
	text-align: left;
  }
